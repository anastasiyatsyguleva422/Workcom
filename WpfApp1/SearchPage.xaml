<Page x:Class="WpfApp1.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Поиск товаров">

    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Простая панель поиска -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="txtSearch" Width="300" Padding="5" 
                    TextChanged="TxtSearch_TextChanged"/>

            <ComboBox x:Name="cmbCategory" Width="150" Margin="10,0,0,0"
                     SelectionChanged="CmbCategory_SelectionChanged">
                <ComboBoxItem Content="Все категории" IsSelected="True"/>
            </ComboBox>

            <Button Content="Сбросить" Width="80" Margin="10,0,0,0" 
                   Click="BtnReset_Click"/>
        </StackPanel>

        <!-- Результаты поиска -->
        <DataGrid x:Name="SearchResultsGrid" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category.CategoryName}" Width="150"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:N2} руб}" Width="100"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Счетчик результатов -->
        <TextBlock Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" 
                  Margin="0,0,0,5" FontSize="12" Foreground="Gray"
                  x:Name="txtResultsCount"/>
    </Grid>
</Page>