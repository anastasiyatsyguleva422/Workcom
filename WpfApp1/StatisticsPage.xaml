<Page x:Class="WpfApp1.StatisticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Статистика">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,131">
            <Button Content="Обновить статистику" Width="201" Click="BtnRefresh_Click" Height="37"/>
        </StackPanel>
        <GroupBox Grid.Row="0" Header="Общая статистика" Margin="0,50,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Общее количество товаров" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalProducts" FontSize="16" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Общая стоимость" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalValue" FontSize="16" HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="Средняя цена" FontWeight="Bold"/>
                    <TextBlock x:Name="txtAveragePrice" FontSize="16" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Статистика по категориям">
            <DataGrid x:Name="StatisticsGrid" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="*"/>
                    <DataGridTextColumn Header="Количество товаров" Binding="{Binding TotalProducts}" Width="120"/>
                    <DataGridTextColumn Header="Средняя цена" Binding="{Binding AveragePrice, StringFormat={}{0:N2} руб}" Width="120"/>
                    <DataGridTextColumn Header="Общая стоимость" Binding="{Binding TotalValue, StringFormat={}{0:N2} руб}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</Page>
