<Page x:Class="WpfApp1.ProductsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Товары">

    <Grid Margin="10" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <Button x:Name="btnAdd" Content="Добавить" Width="80" Click="BtnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Изменить" Width="80" Margin="10,0,0,0" Click="BtnEdit_Click"/>
            <Button x:Name="btnDelete" Content="Удалить" Width="80" Margin="10,0,0,0" Click="BtnDelete_Click"/>
            <Button x:Name="btnRefresh" Content="Обновить" Width="80" Margin="10,0,0,0" Click="BtnRefresh_Click"/>
        </StackPanel>

        <!-- Список товаров -->
        <DataGrid x:Name="ProductsGrid" 
                  Grid.Row="1" 
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ProductID}" Width="50"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Category}" Width="150"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:N2} руб}" Width="100"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" x:Name="StatusText" Margin="0,10,0,0"/>
    </Grid>
</Page>